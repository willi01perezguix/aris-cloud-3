# Environment selection
ARIS3_ENV=dev

# Base URL (fallback if env-specific not provided)
ARIS3_API_BASE_URL=http://localhost:8000

# Optional env-specific base URL
# ARIS3_API_BASE_URL_DEV=http://localhost:8000
# ARIS3_API_BASE_URL_STAGING=https://staging.example.com
# ARIS3_API_BASE_URL_PROD=https://api.example.com

# HTTP tuning
ARIS3_TIMEOUT_SECONDS=10
ARIS3_RETRIES=3
ARIS3_VERIFY_SSL=true

# Optional Stock defaults
ARIS3_DEFAULT_PAGE_SIZE=50
ARIS3_DEFAULT_SORT_BY=created_at
ARIS3_DEFAULT_SORT_ORDER=desc

# Optional POS defaults
ARIS3_POS_DEFAULT_CURRENCY=USD
ARIS3_POS_DEFAULT_STORE_ID=
ARIS3_POS_DEFAULT_BUSINESS_DATE=
ARIS3_POS_DEFAULT_TIMEZONE=UTC

# Optional Transfers defaults
ARIS3_TRANSFER_ORIGIN_STORE_ID=
ARIS3_TRANSFER_DESTINATION_STORE_ID=

# Optional Inventory Counts defaults
ARIS3_INVENTORY_DEFAULT_STORE_ID=
ARIS3_INVENTORY_DEFAULT_PAGE_SIZE=50


# Optional Reports/Exports defaults
ARIS3_REPORTS_DEFAULT_STORE_ID=
ARIS3_REPORTS_DEFAULT_FROM=
ARIS3_REPORTS_DEFAULT_TO=
ARIS3_REPORTS_DEFAULT_TIMEZONE=UTC
ARIS3_EXPORT_DEFAULT_FORMAT=csv
ARIS3_EXPORT_POLL_INTERVAL_SECONDS=2
ARIS3_EXPORT_POLL_TIMEOUT_SECONDS=30

# Reports/exports UX tuning
REPORT_DEFAULT_PRESET=7d
EXPORT_POLL_INTERVAL_SEC=2
EXPORT_WAIT_TIMEOUT_SEC=30

# Packaging metadata (non-secret)
ARIS_APP_NAME=ARIS Desktop Clients
ARIS_APP_VERSION=0.6.2
ARIS_COMPANY=ARIS

# Optional media UI settings
MEDIA_ENABLE_IMAGES=true
MEDIA_CACHE_TTL_SEC=300

# Optional packaging override
PACKAGING_APP_VERSION=
