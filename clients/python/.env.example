# Environment selection
ARIS3_ENV=dev

# Base URL (fallback if env-specific not provided)
ARIS3_API_BASE_URL=http://localhost:8000

# Optional env-specific base URL
# ARIS3_API_BASE_URL_DEV=http://localhost:8000
# ARIS3_API_BASE_URL_STAGING=https://staging.example.com
# ARIS3_API_BASE_URL_PROD=https://api.example.com

# HTTP tuning
ARIS3_TIMEOUT_SECONDS=10
ARIS3_RETRIES=3
ARIS3_VERIFY_SSL=true

# Optional Stock defaults
ARIS3_DEFAULT_PAGE_SIZE=50
ARIS3_DEFAULT_SORT_BY=created_at
ARIS3_DEFAULT_SORT_ORDER=desc
